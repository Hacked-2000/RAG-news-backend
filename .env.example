# Server Configuration
PORT=4000

# Redis Configuration (Session Storage)
REDIS_URL=redis://localhost:6379
# For Redis Cloud: redis://username:password@host:port

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
# For Qdrant Cloud: https://your-cluster-id.qdrant.io
QDRANT_COLLECTION=news_passages
QDRANT_API_KEY=your_qdrant_api_key_here

# Google Gemini AI Configuration (Primary LLM)
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# OpenAI Configuration (Fallback LLM & Embeddings)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Session & Performance Configuration
SESSION_TTL=604800  # Session expiry in seconds (7 days)
RETRIEVE_K=5        # Number of news articles to retrieve for context
EMBED_DIM=768       # Embedding vector dimensions